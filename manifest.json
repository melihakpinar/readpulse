{
    "name": "readpulse",
    "description": "Enhance your reading focus by highlighting text word by word.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "readpulse_icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icons/readpulse_icon16.png",
      "48": "icons/readpulse_icon48.png",
      "128": "icons/readpulse_icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html"
  }
  